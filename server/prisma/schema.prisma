datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id
  email       String
  signInName  String
  displayName String
  photoUrl    String?
  createdAt   DateTime
  tasks       Task[]
  Work        Work[]
  List        List[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model Work {
  id       String @id
  quiz     String
  answer   String
  Author   User   @relation(fields: [authorId], references: [id])
  authorId String
}

model List {
  id       String @id
  name     String
  Author   User   @relation(fields: [authorId], references: [id])
  authorId String
}
